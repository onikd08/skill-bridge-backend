{
  "name": "skill-bridge-backend",
  "version": "1.0.0",
  "description": "Backend project generated by Apollo Gears CLI",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "seed:admin": "npx tsx src/seed/seedAdmin.ts",
    "postinstall": "prisma generate",
    "build": "prisma generate && tsup src/server.ts --format esm --platform node --target node20 --outDir api --external pg-native",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "express",
    "prisma",
    "typescript",
    "apollo-gears"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "pg": "^8.18.0",
    "tsup": "^8.5.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "eslint": "^10.0.1",
    "prettier": "^3.8.1",
    "prisma": "^7.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
