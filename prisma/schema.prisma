generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  TUTOR
  STUDENT
}

enum UserStatus {
  ACTIVE
  BANNED
}

model User {
  id       String     @id @default(uuid())
  email    String     @unique
  password String
  name     String
  role     UserRole
  status   UserStatus

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
  @@index([status])
  @@map("users")
}
