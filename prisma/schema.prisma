generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  TUTOR
  STUDENT
}

enum UserStatus {
  ACTIVE
  BANNED
}

model User {
  id       String     @id @default(uuid())
  email    String     @unique
  password String
  name     String
  role     UserRole
  status   UserStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tutorProfile TutorProfile?

  @@index([role])
  @@index([status])
  @@map("users")
}

model TutorProfile {
  id         String  @id @default(uuid())
  bio        String?
  experience Int
  isFeatured Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tutorProfileId String @unique
  user           User   @relation(fields: [tutorProfileId], references: [id])

  @@map("tutorProfiles")
}
